@model Pagila.ViewModel.AddressViewModel

@{
    ViewBag.Title = "Kaydet";
    var cityListUrl = Url.Action("ReadAll", "City");
}

<h2>Kaydet</h2>

@using (Html.BeginForm("CreatePost", "Address"))
{
